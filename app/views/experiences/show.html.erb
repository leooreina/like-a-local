<div class="container">
  <h1><%= @experience.title %></h1>
  <h4><%= @experience.description %></h4>
  <p><strong>Price: </strong>R$<%= @experience.price %>0</p>
  <p><strong>Availability: </strong><%= @experience.week_days %></p>
  <p><strong>Duration:</strong> <%= @experience.duration %> Hours </p>
  <p><strong>Starting time:</strong> <%= @experience.starting_time.strftime("%H:%M") %></p>
  <% if @experience.photo.attached? %>
    <%= cl_image_tag @experience.photo.key, height: 300, width: 400, crop: :fill %>
  <% else %>
    <p><strong>No images for this experience</strong></p>
  <% end %>
  <%= link_to "New order", new_experience_order_path(@experience) %>
  <%= link_to "Back", root_path %>
</div>


  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#new">
    Edit Experience
  </button>
        <%= link_to "Remove", experience_path,
                method: :delete,
                data: { confirm: "Are you sure?" } %> </li>


<div class="modal fade" id="new" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <h1>New Experience</h1>
        <%= simple_form_for(@experience) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
        <div class="form-inputs">
          <%= f.input :location, label: 'Meeting Point'%>
          <%= f.input :title %>
          <%= f.input :price %>
          <%= f.input :description %>
          <%= f.input :week_days, label: 'Which week days the experience is available?' %>
          <%= f.input :starting_time %>
          <%= f.input :duration, label: 'How long last the experience?' %>
          <%= f.input :photo, as: :file %>
          <%= f.button :submit, class: 'btn btn-outline-dark' %>

          <% end  %>

        </div>

      </div>

    </div>


  </div>
</div>
