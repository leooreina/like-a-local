<% if @experience.photo.attached? %>
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @experience.photo.key %>)">
    <div class="container">
      <h1><%= @experience.title %></h1>
    </div>
      <div class="place-me mt-5">
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#order">
      Order now!
    </button>
  </div>
  </div>
<% else %>
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path("trip-image.jpeg") %>)">
    <div class="container">
      <h1><%= @experience.title %></h1>
    </div>
  <div class="place-me mt-5">
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#order">
      Order now!
    </button>
  </div>
  </div>
<% end %>






<div class="show-body mb-5">

  <div class="my-container">

    <div class="container row mt-5">
      <p><strong>Price: </strong>R$<%= @experience.price %>0</p>
      <p><strong>Availability: </strong><%= @experience.week_days %></p>
      <p><strong>Duration:</strong> <%= @experience.duration %> Hours </p>
      <p><strong>Starting time:</strong> <%= @experience.starting_time.strftime("%H:%M") %></p>
    </div>

    <div class="container row mt-5">
      <h5><%= @experience.description %></h5>
    </div>

  </div>

</div>







<%#
        <%= link_to "Remove", experience_path,
                method: :delete,
                data: { confirm: "Are you sure?" } %>

</div>

<div class="modal fade" id="new" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New Experience</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= simple_form_for(@experience) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
        <div class="form-inputs">
          <%= f.input :location, label: 'Meeting Point'%>
          <%= f.input :title %>
          <%= f.input :price %>
          <%= f.input :description %>
          <%= f.input :week_days, label: 'Which week days the experience is available?' %>
          <%= f.input :starting_time %>
          <%= f.input :duration, label: 'How long last the experience?' %>
          <%= f.input :photo, as: :file %>
          <%= f.button :submit, class: 'btn btn-outline-dark' %>

          <% end  %>

        </div>

      </div>

    </div>


  </div>
</div>





<div class="modal fade" id="order" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New Order</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">



        <%= simple_form_for [@experience, @order] do |f| %>
        <%= f.input :attendees, placeholder: 'Add number of people' %>
        <%= f.button :submit, class: 'btn btn-outline-dark' %>

        <% end  %>

      </div>

    </div>

  </div>


</div>
</div>
