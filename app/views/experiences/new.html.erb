<div class="container my-5">
  <div class="my-bm-container">
    <h1>New Experience</h1>
    <%= simple_form_for(@experience) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <div class="form-inputs">
      <%= f.input :location, label: 'Meeting Point'%>
      <%= f.input :title %>
      <%= f.input :price %>
      <%= f.input :description %>
      <%= f.input :week_days, label: 'Which week days the experience is available?' %>
      <%= f.input :starting_time %>
      <%= f.input :duration, label: 'How long last the experience?' %>
      <%= f.input :photo, as: :file %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, class: 'btn btn-outline-dark' %>
    </div>
    <% end  %>
  </div>
</div>